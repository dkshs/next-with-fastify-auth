{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@nwfa/tsconfig/nextjs.json",
  "compilerOptions": {
    // Module Resolution and Detection
    "baseUrl": ".",
    // Path Aliases
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
